---
import { Image } from "astro:assets";
import github from "../images/github.png";
import linkedin from "../images/linkedin.png";

const currentYear = new Date().getFullYear();
---

<footer class="bg-neutral">
  <div
    class="base-padding lock-width footer text-neutral-content justify-center items-center gap-y-6 py-4 md:justify-between"
  >
    <p class="text-base text-center md:text-left">
      &copy; {currentYear} Muhammad Nur Hidayat. All Rights Reserved
    </p>

    <ul class="flex justify-between items-center gap-x-4 mx-auto md:mx-0">
      <li>
        <a
          aria-label="GitHub"
          href="https://github.com/mdayat"
          target="_blank"
          rel="noopener"
        >
          <Image src={github} alt="GitHub Icon" width="32" />
        </a>
      </li>

      <li>
        <a
          aria-label="LinkedIn"
          href="https://www.linkedin.com/in/mdayat/"
          target="_blank"
          rel="noopener"
        >
          <Image src={linkedin} alt="LinkedIn Icon" width="32" />
        </a>
      </li>

      <li>
        <a
          aria-label="Google Mail"
          href="mailto:muhnurdayat@gmail.com"
          target="_blank"
          rel="noopener"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 256 193"
            width="32"
          >
            <path
              fill="#4285F4"
              d="M58.182 192.05V93.14L27.507 65.077L0 49.504v125.091c0 9.658 7.825 17.455 17.455 17.455z"
            >
            </path>
            <path
              fill="#34A853"
              d="M197.818 192.05h40.727c9.659 0 17.455-7.826 17.455-17.455V49.505l-31.156 17.837l-27.026 25.798z"
            >
            </path>
            <path
              fill="#EA4335"
              d="m58.182 93.14l-4.174-38.647l4.174-36.989L128 69.868l69.818-52.364l4.669 34.992l-4.669 40.644L128 145.504z"
            ></path>
            <path
              fill="#FBBC04"
              d="M197.818 17.504V93.14L256 49.504V26.231c0-21.585-24.64-33.89-41.89-20.945z"
            >
            </path>
            <path
              fill="#C5221F"
              d="m0 49.504l26.759 20.07L58.182 93.14V17.504L41.89 5.286C24.61-7.66 0 4.646 0 26.23z"
            >
            </path>
          </svg>
        </a>
      </li>
    </ul>
  </div>
</footer>
